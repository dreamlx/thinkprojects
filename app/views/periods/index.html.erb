<div class="row">
  <div class="col-md-10">
    <!-- search -->
    <%= search_form_for(@q, html: { class: 'form-inline' }) do |f| %>
      <%= f.input :number_cont, 
                  as: :search,
                  label: false,
                  placeholder: t('number_cont'),
                  required: false %>
      <%= f.button :submit, t('search') %>
    <% end %>
    <!-- end of search -->
  </div>
  <div class="col-md-2">
    <%= link_to t('new_period'), new_period_path, class: 'btn btn-danger' %>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t("period_number") %></th>
      <th><%= t("work_hours") %></th>
      <th><%= t("starting_date") %></th>
      <th><%= t("ending_date") %></th>
      <th colspan="3"><%= t('operations') %></th>
    </tr>
  </thead>
  <tbody>
    <%= render @periods %>
  </tbody>
</table>
<%= will_paginate @periods %>