<div class="row">
  <div class="col-md-10">
    <%= render 'search' %>
  </div>
  <div class="col-md-2">
    <%= link_to t('new_billing'), new_billing_path, class: 'btn btn-danger' %>
  </div>
</div>

<table class="table table-bordered">
  <tr>
    <th><%= sort_link(@q, :project_id, t('job_code')) %></th>
    <% Billing.content_columns.each do |column| %>
      <% next if column.human_name =='Created on' or column.human_name =='Updated on'%>
      <th><%= sort_link(@q, column.name, column.human_name) %></th>
    <% end %>
    <th colspan=3><%= t('operations') %></th>
  </tr>
  <%= render @billings %>
</table>
<%= will_paginate @billings %>