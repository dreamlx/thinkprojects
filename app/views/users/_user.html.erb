<tr>
  <td><b><%= link_to user.login, user %></b></td>
  <td><%= user.roles %></td>
  <td><%= user.name %></td>
  <td><%= user.english_name %></td>
  <td><%= user.employee_number %></td>
  <td><%= user.department %></td>
  <td><%= user.position %></td>
  <td>
    <%= link_to t('show'), user %>
    <%= link_to t('edit'), edit_user_path(user) %>
    <%= link_to t('destroy'), user, data: {confirm: 'Are you sure?'}, method: :delete %>
  </td>
</tr>