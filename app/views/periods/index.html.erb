<!-- search -->
<%= search_form_for(@q) do |f| %>
  <%= f.input :number_cont, 
              as: :search,
              label: t('number_cont'),
              required: false %>
  <%= f.button :submit, t('search') %>
<% end %>
<!-- end of search -->
<%= link_to t('new_period'), new_period_path %>
<table class="table table-bordered">
  <tr>
    <th><%= t("period_number") %></th>
    <th><%= t("work_hours") %></th>
    <th><%= t("starting_date") %></th>
    <th><%= t("ending_date") %></th>
    <th colspan="3"><%= t('operations') %></th>
  </tr>
  <%= render @periods %>
</table>
<%= will_paginate @periods %>