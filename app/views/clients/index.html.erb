<%= search_form_for(@q) do |f| %>
  <%= f.input :client_code_or_chinese_name_or_english_name_cont, 
              as: :search,
              label: t('client_code_or_chinese_name_or_english_name_cont'),
              required: false %>
  <%= f.button :submit, t('search') %>
<% end %>
<%= link_to t('new_client'), new_client_path %>
<table class="table table-bordered">
  <tr>
    <th><%= t('chinese_name') %></th>
    <th><%= t('english_name') %></th>
    <th><%= t('client_code') %></th>
    <th><%= t('account_owner') %></th>
    <th colspan="3"><%= t('operations') %></th>
  </tr>
  <%= render @clients %>
</table>
<%= will_paginate @clients %>