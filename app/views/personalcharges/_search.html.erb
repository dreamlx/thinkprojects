<%= search_form_for @q do |f| %>
  <%= f.input :project_manager_id_eq, 
              collection: User.selected_users, 
              label: t('project_manager_id_eq'),
              required: false %>
  <%= f.input :user_id_eq, 
              collection: User.selected_users,
              label: t('user_id_eq'),
              required: false %>
  <!-- #todo should have a time range for period number -->
  <%= f.input :period_number_eq, 
              collection: Period.all,
              label: t('period_number_eq'),
              required: false %>
  <%= f.input :state_eq, 
              collection: ["pending","approved","disapproved"],
              label: t('state'),
              required: false %>
  <%= f.button :submit, t('search') %>
<% end %>