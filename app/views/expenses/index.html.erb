<%= render 'search' %>
<%= link_to 'Export data', expenses_path(format: "xls") %>
<%= link_to 'New expense', new_expense_path %>
<table class="table table-bordered">
  <tr>
    <th>No</th>
    <th>Date</th>
    <th>Employee</th>
    <th>Billable</th>
    <th>Category</th>
    <th>Client Name</th>
    <th>Project Code</th>
    <th>Amount</th>
    <th>State</th>
    <th colspan="3">OP</th>
  </tr>
  <%= render @expenses %>
  <tr>
    <td colspan="7">Total</td>
    <td><%= format("%.2f",@sum_amount) %></td>
    <td colspan="4"></td>
  </tr>
</table>
<%= will_paginate @expenses %>