<%= search_form_for(@q) do |f| %>
  <%= f.input :code_or_title_cont, 
              as: :search,
              label: t('code_or_title_cont'),
              required: false %>
  <%= f.button :submit, t('search') %>
<% end %>
<%= link_to "#{t('new')}#{t('industry')}", new_industry_path %>
<table class="table table-bordered">
  <tr>
    <% Industry.content_columns.each do |column| %>
      <th><%= t(column.name) %></th>
    <% end %>
    <th colspan="3"><%= t('operations') %></th>
  </tr>
  <%= render @industries %>
</table>
<%= will_paginate @industries %>