<%= render 'search' %>
<%= link_to t('export_data'), expenses_path(format: "xls") %> ||
<%= link_to t('new_expense'), new_expense_path %>
<table class="table table-bordered">
  <tr>
    <th>ID</th>
    <th><%= t('charge_date') %></th>
    <th><%= t('user') %></th>
    <th><%= t('billable') %></th>
    <th><%= t('category') %></th>
    <th><%= t('client_name') %></th>
    <th><%= t('job_code') %></th>
    <th><%= t('amount') %></th>
    <th><%= t('state') %></th>
    <th colspan="3"><%= t('operations') %></th>
  </tr>
  <%= render @expenses %>
  <tr>
    <td colspan="7"><%= t('total') %></td>
    <td><%= format("%.2f",@sum_amount) %></td>
    <td colspan="4"></td>
  </tr>
</table>
<%= will_paginate @expenses %>