<%= search_form_for(@q) do |f| %>
  <%= f.input :category_or_title_cont, 
              as: :search,
              label: t('category_or_title_cont'),
              required: false %>
  <%= f.button :submit, t('search') %>
<% end %>

<%= link_to "#{t('new')}#{t('dict')}", new_dict_path %>
<table class="table table-bordered">
  <tr>
    <% Dict.content_columns.each do |column| %>
      <th><%= sort_link(@q, column.name, t(column.name)) %></th>
    <% end %>
    <th colspan="3"><%= t('operations') %></th>
  </tr>  
  <%= render @dicts %>
</table>

<%= will_paginate @dicts%>