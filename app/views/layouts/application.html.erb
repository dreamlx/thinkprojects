<html>
  <head>
    <title><%=h(yield(:title)||controller.action_name)%></title>
    <%= stylesheet_link_tag 'application'%>

    <%= stylesheet_link_tag 'tb','tablecloth','dropdown','themes' %>

    <%= javascript_include_tag :defaults,'calenderJS','Calendar4','sdmenu'%>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <!--******************* Include the following sections in the head of year documents **********************-->
    <!--NodeFire API Script Reference [required for script enhanced menu control]-->
    <script type="text/javascript" src="/javascripts/nodefire.js"></script>

    <!--******************* End NodeFire head sections **********************-->
    <%= yield(:head)%>
  </head>
  <body>
    <div id="banner">
      <%= render :partial => 'layouts/banner' %>

    </div>
    <div id="user_bar"><%= render :partial=>"users/user_bar"%></div>
    <div id="top_menu">
      <%= render:partial => 'layouts/topmenu' %>
    </div>
    <div id="main_area">
      <div style="clear: both"/>
<%#= render :partial => 'layouts/left' %>
      <div id="middle_area">

        <%- flash.each do |name,msg| -%>
          <%= content_tag :div, msg, :id =>"flash_#{name}" %>
        <%- end -%>

        <%- if show_title? -%>
          <h1><%=h yield(:title) %></h1>
        <%- end -%>

        <%= yield %>

      </div>
      <div id="right_area"></div>
    </div>
    <div id="footer">
      <%= render :partial => 'layouts/footer' %>
    </div>
  </body>
</html>
