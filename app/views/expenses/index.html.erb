
<% form_for(:expense, :url => expenses_path, :html => { :method => :get }) do |f| %>
  <%= render :partial => "search" %>
<% end %>

<hr/>
<%= link_to 'Export data', :controller=>"reports", :action => "expenses_export" %>||
<%= link_to 'New expense', :action => 'new' %>
<table>
  <tr>
    <th>No</th>
    <th>Date</th>
    <th>Employee</th>
    <th>Billable</th>
    <th>Category</th>
    <th>Client Name</th>
    <th>Project Code</th>
    <th>Amount</th>
    <th>State</th>
    <th colspan="3">OP</th>
  </tr>

  <% for expense in @expenses %>
    <tr id="item_<%= expense.id %>" >
      <%= render :partial => 'item', :locals => { :expense => expense } %>
    </tr>
  <% end %>
  <tr>
    <td colspan="7">Total</td>
    <td id="sum_amount"><%= @sum_amount %></td>
    <td colspan=4"></td>
  </tr>
</table>
<%= will_paginate @expenses %>

