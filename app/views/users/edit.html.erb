<% title "编辑用户" %>
<fieldset>
  <% form_for(@user) do |f| %>
    <%= f.error_messages %>
    <p>
      <%= f.label :login,"帐号" %><br />
      <%= f.text_field :login,:disabled => true  %>
    </p>
    <p>
      <%= f.label :email,"邮箱" %><br />
      <%= f.text_field :email %>
    </p>
        <p><%= f.label :password,'密码：' %><br/>
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation, '确认密码：' %><br/>
  <%= f.password_field :password_confirmation %></p>
    <% if current_user.roles == 'providence_breaker' %>
    <p>
      <%= f.label :roles,"角色" %><br />staff/senior/manager/parnter/admin/superuser
      <%= f.select :roles, [['staff','staff'],['senior','senior'],['manager','manager'],['partner','partner'],['systemadmin','systemadmin']['超级管理员','providence_breaker']], {:include_blank=>"请选择",:selected => @user.roles||0} %>
    </p>
    <p><%= f.label :person_id, '关联员工：' %><br/>
    <%= f.select :person_id, Person.find(:all,:order=>"english_name").collect {|p| [ p.english_name+"||"+p.employee_number, p.id ] }, { :include_blank => false,:selected =>@user.person_id||0} %>
  </p>

  <% end %>
    <p>
      <%= f.submit "更新" %>
    </p>
  <% end %>
</fieldset>
<%= link_to "返回",url_for(:back) %>
