<h1>Listing industries</h1>

<table>
  <tr>
  <% for column in Industry.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
    <th colspan="3"></th>
  </tr>
  
<% for industry in @industries %>
  <tr>
  <% for column in Industry.content_columns %>
    <td><%=h industry.send(column.name).humanize %></td>
  <% end %>
    <td><%= link_to 'Show', industry %></td>
    <td><%= link_to 'Edit', edit_industry_path(industry) %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => industry }, :confirm => 'Are you sure?', :post => true %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @industries %>
<br />

<%= link_to 'New industry', :action => 'new' %>
