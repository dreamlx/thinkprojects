<h1>Listing clients</h1>
<%= search_form_for(@q) do |f| %>
  <%= f.input :client_code_or_chinese_name_or_english_name_cont, as: :search %>
  <%= f.button :submit, 'seach' %>
<% end %>
<%= link_to 'New client', new_client_path %>
<table class="table table-bordered">
  <tr>
    <th>Chinese name</th>
    <th>English name</th>
    <th>Client code</th>
    <th>Account Owner</th>
    <th colspan="3"></th>
  </tr>
  <%= render @clients %>
</table>
<%= will_paginate @clients %>