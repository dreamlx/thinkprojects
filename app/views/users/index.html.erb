<!-- search -->
<%= search_form_for(@q) do |f| %>
  <%= f.input :employee_number_or_english_name_or_name_cont, 
              as: :search,
              label: t('employee_number_or_english_name_or_name_cont'),
              required: false %>
  <%= f.button :submit, t('search') %>
<% end %>
<!-- end of search -->

<table class="table table-bordered">
  <tbody>
    <tr>
      <th><%= t('login') %></th>
      <th><%= t('role') %></th>
      <th><%= t('chinese_name') %></th>
      <th><%= t('english_name') %></th>
      <th><%= t('employee_number') %></th>
      <th><%= t('department') %></th>
      <th><%= t('position') %></th>
      <th colspan="3"><%= t('operations') %></th>
    </tr>
    <%= render @users %>
  </tbody>
</table>
<%= will_paginate @users%>