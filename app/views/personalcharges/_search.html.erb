<%= search_form_for @q do |f| %>
  <%= f.input :project_manager_id_eq, collection: User.selected_users %>
  <%= f.input :user_id_eq, collection: User.selected_users %>
  <!-- #todo should have a time range for period number -->
  <%= f.input :period_number_eq, collection: Period.all %>
  <%= f.input :state_eq, collection: ["pending","approved","disapproved"] %>
  <%= f.button :submit, 'Search' %>
<% end %>