
<tr id="item_<%= personalcharge.id %>" class="personalcharge_item " bgcolor='<%= @warn_color%>' title=" created at:<%= personalcharge.created_on%>">
	<!--td><%=h personalcharge.id %></td-->
	<td><%=  personalcharge.person.english_name if personalcharge.user %></td>
	<td><%= check_box_tag "check_items[#{personalcharge.id}]", personalcharge.id if personalcharge.state == "pending" %> <%=  personalcharge.period.number       unless personalcharge.period.nil? %></td>
	<td ><%=  personalcharge.charge_date %></td>
	<td ><div title="<%= personalcharge.project.client.english_name unless personalcharge.project.nil? %>" href="#"><%=  personalcharge.project.job_code    unless personalcharge.project.nil?%></div></td>

	<td><%= format("%.2f",personalcharge.hours)%></td>
	<td><%= format("%.2f",personalcharge.ot_hours||0)%></td>
	<td><%= personalcharge.desc%></td>
	<td><%=h personalcharge.state.humanize %></td>
	<td><%= link_to 'Show', personalcharge_path(personalcharge) %></td>

	<td><%= link_to 'Edit', edit_personalcharge_path(personalcharge) %></td>
	<td>
		<%= button_to "approval", 
			:url=>approval_personalcharge_path(personalcharge), 
			:confirm => 'Are you sure?' %>
		<%= button_to "disapproval", 
			:url=>disapproval_personalcharge_path(personalcharge), 
			:confirm => 'Are you sure?' %>
		<%= select("","select_zy_id",Project.find(:all,:conditions=>" state = 'approved' ", :order=>"job_code").collect {|p| [ p.job_code, p.id ] }, { :include_blank => "Transfer to:" },{ :onChange=>"switch_form(this.value,'#{transform_personalcharge_path(personalcharge)}',#{personalcharge.id}); " }) if personalcharge.state =="approved" and  !Dict.get_forward(personalcharge.project.job_code).empty?  %> 
		<%= button_to 'Destroy',        
			:update=> 'personalcharges',
			:url=>personalcharge,        
			:confirm => 'Are you sure destroy this item?',
			:method => :delete %>
	</td>
</tr>
