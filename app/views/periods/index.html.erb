<h1><%=  "Listing Period" %></h1>
<!-- search -->
<%= search_form_for(@q) do |f| %>
  <%= f.input :number_cont, as: :search %>
  <%= f.button :submit, 'search' %>
<% end %>
<!-- end of search -->
<%= link_to "New Period", new_period_path %>
<table class="table table-bordered">
  <tr>
    <th><%= Period.human_attribute_name("number") %></th>
    <th><%= Period.human_attribute_name("work_hours") %></th>
    <th><%= Period.human_attribute_name("starting_date") %></th>
    <th><%= Period.human_attribute_name("ending_date") %></th>
    <th colspan="3"></th>
  </tr>
  <%= render @periods %>
</table>
<%= will_paginate @periods %>