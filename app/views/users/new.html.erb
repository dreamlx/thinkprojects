<% title "新建用户" %>
<%# @user.password = @user.password_confirmation = nil %>
<fieldset>
<%#= error_messages_for :user %>
<%= form_for @user do |f| -%>
  <p><%= f.label :login,'账号：' %><br/>
  <%= f.text_field :login %></p>

  <p><%= f.label :email, '邮箱：' %><br/>
  <%= f.text_field :email %></p>

  <p><%= f.label :password,'密码：' %><br/>
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation, '确认密码：' %><br/>
  <%= f.password_field :password_confirmation %></p>

  <p><%= f.label :person_id, '关联员工：' %><br/>
    <%= select("user","person_id", Person.find(:all,:order=>"english_name").collect {|p| [ p.english_name+"||"+p.employee_number, p.id ] }, { :include_blank => false }) %>
  </p>
  <p><%= f.submit '注册' %></p>
<% end %>
</fieldset>
