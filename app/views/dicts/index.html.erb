<div class="row">
  <div class="col-md-10">
    <%= search_form_for(@q, html: {class: 'form-inline'}) do |f| %>
      <%= f.input :category_or_title_cont, 
                  as: :search,
                  label: t('category_or_title_cont'),
                  required: false %>
      <%= f.button :submit, t('search') %>
    <% end %>
  </div>
  <div class="col-md-2">
    <%= link_to "#{t('new')}#{t('dict')}", new_dict_path, class: 'btn btn-danger' %>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <% Dict.content_columns.each do |column| %>
        <th><%= sort_link(@q, column.name, t(column.name)) %></th>
      <% end %>
      <th colspan="3"><%= t('operations') %></th>
    </tr>
  </thead>
  <tbody>
    <%= render @dicts %>
  </tbody>
</table>

<%= will_paginate @dicts%>