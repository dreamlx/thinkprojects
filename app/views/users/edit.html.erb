<% title "编辑用户" %>
<%= simple_form_for(@user) do |f| %>
  <%= f.input :login  %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <% if current_user.roles == 'providence_breaker' %>
    <%= f.input :roles, collection: User.selected_roles %>
    <%= f.input :person_id, collection: User.selected_persons %>
  <% end %>
  <%= f.button :submit %>
<% end %>
<%= link_to "返回", users_path %>