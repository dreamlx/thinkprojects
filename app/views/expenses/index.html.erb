
<%= form_for(:expense, :url => expenses_path, :html => { :method => :get }) do |f| %>
  <%#= render :partial => "search" %>
<% end %>
<%#= link_to 'Export data', :controller=>"reports", :action => "expenses_export" %>||<%= link_to 'New expense', :action => 'new' %>
<form name="myform" action="expenses/batch_actions" method="post">
<%= render 'shared/all_op' %>
<table class="table table-bordered">
  <tr>
    <th>No</th>
    <th>Date</th>
    <th>Employee</th>
    <th>Billable</th>
    <th>Category</th>
    <th>Client Name</th>
    <th>Project Code</th>
    <th>Amount</th>
    <th>State</th>
    <th colspan="3">OP</th>
  </tr>

  <%= render @expenses %>
  <tr>
    <td colspan="7">Total</td>
    <td id="sum_amount"><%= format("%.2f",@sum_amount) %></td>
    <td colspan="4"></td>
  </tr>
</table>
</form>
<%= will_paginate @expenses %>