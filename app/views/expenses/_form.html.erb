
<%= simple_form_for(@expense) do |f| %>
    <% if current_user.roles == "providence_breaker" %>
      <%= f.association :user, collection: User.order('name') %>
    <% else %>
      <%= f.input :user_id, collection: [current_user] %>
    <% end %>

    <%#= select_booked_project("expense", "project_id") %>
    <%= f.input :charge_date %>
    <%= f.input :approved_by, colletion: User.order("english_name") %>
    <%= f.input :billable, as: :boolean, boolean_style: :inline  %>
    <%= f.input :expense_category, collection: Dict.expense_types.collect {|p| [ p.title, p.title ] } %>
    <%= f.input :fee %>
    <%= f.input :desc, as: :text %>
    <%= f.button :submit %>
<% end %>

