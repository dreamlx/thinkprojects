<div class="row">
	<div class="col-md-10">
		<%= render "search" %>	
	</div>
	
	<div class="col-md-2">
		<%= link_to t('new_project'), new_project_path, class: "btn btn-danger" %>	
	</div>

	<div class="col-md-12">
		<table class="table table-striped">
			<thead>
				<tr>
					<th><%= sort_link(@q, :id, t('id')) %></th>
					<th><%= sort_link(@q, :job_code, t('job_code')) %></th>
					<th><%= sort_link(@q, :created_on, t('created_date')) %></th>
					<th><%= t('client_name') %></th>
					<th><%= sort_link(@q, :manager, t('project_creator')) %></th>
					<th><%= sort_link(@q, :description, t('desc')) %></th>
					<th><%= sort_link(@q, :state, t('state')) %></th>
					<th></th>
					<th colspan="3"><%= t('operations') %></th>
				</tr>
			</thead>
			<tbody>
				<%= render @projects %>
			</tbody>
		</table>
		<%= will_paginate @projects %>
	</div>
</div>