<%= simple_form_for(@person) do |f| %>
  <%= f.input :chinese_name  %>
  <%= f.input :english_name  %>
  <%= f.input :employee_number  %>
  <%= f.input :charge_rate, placeholder:  @person.charge_rate||0 %>
  <%= f.input :employment_date  %>
  <%= f.input :address  %>
  <%= f.input :postalcode  %>
  <%= f.input :mobile  %>
  <%= f.input :tel  %>
  <%= f.input :gender, collection: [:male, :female]  %>
  <%= f.input :department_id, collection: Dict.where("category='department'").map {|p| [ p.title, p.id ]} %>
  <%= f.input :status_id,  collection: Dict.where("category='person_status'").map {|p| [ p.title, p.id ] } %>
  <%= f.button :submit  %>
<% end %>