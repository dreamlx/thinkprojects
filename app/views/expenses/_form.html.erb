<%= simple_form_for(@expense) do |f| %>
  <div class="col-md-3">
    <%= f.association :user, collection: User.selected_users %>
  </div>
  <div class="col-md-3">
    <%= f.input :project_id, collection: Project.alive %>
  </div>
  <div class="col-md-3">
    <%= f.input :approved_by, collection: User.selected_users %>
  </div>
  <div class="col-md-3">
    <%= f.input :expense_category, collection: Dict.selected_expense_types %>
  </div>
  <div class="col-md-3">
    <%= f.input :charge_date %>
  </div>
  <div class="col-md-3">
    <%= f.input :fee %>
  </div>
  <div class="col-md-12">
    <%= f.input :desc, as: :text %>
  </div>
  <div class="col-md-12">
    <%= f.input :billable, as: :boolean  %>
  </div>
  <div class="col-md-12">
    <%= f.button :submit %>
  </div>
<% end %>