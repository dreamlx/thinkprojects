
	<td><%= check_box_tag "check_items[#{project.id}]", project.id %></td>
	<td><b><%= h project.job_code%></b></td>
	<td> <%=h project.created_on.strftime('%Y-%m-%d') %></td>
	<td class="wide_col"><%=h project.client.english_name||"" unless project.client.nil?%></td>
	<td><%=h project.manager.english_name||"" unless project.manager.nil?%></td>
	<td><%=h truncate(project.description, :length => 40) %></td>
	<td><%=h project.state.humanize%></td>
	<td>
		<%= link_to 'View', project_path(project) %>
	</td>
	<td>
		<%= link_to 'Edit', edit_project_path(project) %>
	</td>
	<td>
		<%= button_to 'Approval', 
			:url => approval_project_path(project), 
			:confirm => check_message(project)+" Are you sure approval?"%>

		<%= button_to 'Disapproval', 
			:url => disapproval_project_path(project), 
			:confirm => check_message(project)+" Are you sure disapproval?"%>

		<%= button_to 'Close', 
			:url => close_project_path(project), 
			:confirm => 'Are you sure close?'%>

		<%= button_to 'ReOpen', 
			:url=>close_project_path(project), 
			:confirm => 'Are you sure reopen it ?',
			:method => :post if project.state =="closed" and current_user.roles == 'providence_breaker' %>
		<%= select("","select_zy_id",Project.find(:all,:conditions=>" state = 'approved' ", :order=>"job_code").collect {|p| [ p.job_code, p.id ] }, { :include_blank => "Transfer to:" },{ :onChange=>"switch_form(this.value,'#{transform_project_path(project)}',#{project.id}); " }) if project.state =="approved" and  !Dict.get_forward(project.job_code).empty? %> 
		<%= button_to 'Destroy', 
			:update=> 'projects',
			:url=>project, 
			:confirm => 'Are you sure destroy?', 
			:method => :delete if current_user.roles == 'providence_breaker' and project.state =="pending"%>

	</td>
